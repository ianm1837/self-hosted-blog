<div class="container d-flex flex-column align-items-center h-100">
  <div class="container d-flex justify-content-between m-3">
    <div>
      <h1>Your Dashboard</h1>
    </div>
    <div>
      <a href="/posts/new" class="btn btn-primary"><i class="bi bi-pencil-square"></i> New Post</a>
    </div>    
  </div>
      {{#each posts as |post|}}
      <div class="card mb-3 w-100">
        <h5>{{post.title}}</h5>
        <p>{{post.content}}</p>
      </div>
      {{/ each }}
</div>