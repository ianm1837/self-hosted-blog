<div class="container d-flex flex-column align-items-center h-100">
  <div class="card m-2 w-50">
    <div class="card-body">
      <h5 class="card-title">Create New User</h5>
      <form class="">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="username" class="form-control" id="username-signup" name="username">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password-signup" name="password">
        </div>
        <div class="d-flex flex-row justify-content-between">
          <button class="btn btn-primary signup-button">Submit</button>
          <a href="./login">Login</a>
        </div>
      </form>
    </div>
  </div>
</div>
