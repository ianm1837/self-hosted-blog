<div class="container d-flex flex-column align-items-center">
  <div class="card p-3 mt-3">
    <form class="d-flex flex-column align-items-left">
      <div class="mb-3">
        <label class="form-label" for="post-title">Post Title</label>
        <input class="form-control" type="text" name="post-title" id="post-title" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="post-content">Post Content</label>
        <textarea class="form-control" name="post-content" id="post-content" cols="100" rows="10"></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
</div>