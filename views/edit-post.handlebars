<div class="container d-flex flex-column align-items-center">
  <div class="card p-3 mt-3">
    <form class="d-flex flex-column align-items-left">
      <div class="mb-3">
        <label class="form-label" for="post-title">Post Title</label>
        <input value={{post.title}} class="form-control" type="text" name="post-title" id="editPostTitle" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="post-content">Post Content</label>
        <textarea class="form-control" name="post-content" id="editPostContent" cols="100" rows="10">{{post.content}}</textarea>
      </div>
      <button id="edit-post-button" class="btn btn-primary" type="submit">Save</button>
    </form>
  </div>
</div>